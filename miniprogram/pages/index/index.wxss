/* gonggao */
.notice {
  height: 75rpx;
  width: 96%;
  margin: 0 auto;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background: #fff;
  display: flex;
  align-content: space-between;
}

.notice_1 {
  height: 75rpx;
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notice_2{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-style: italic;
  font-size: 40rpx;
}

/* 右下发布按钮 */
.round-click {
  height: 120rpx;
  width: 120rpx;
  background-image: linear-gradient(#76EEC6,#4EEE94);
  border-radius: 100%;
  position: fixed;
  bottom: 120rpx;
  right: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 120rpx;
}


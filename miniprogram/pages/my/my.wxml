<!-- 头像信息 -->
<block wx:for="{{userInfo}}" wx:key="index">
  <view class="head_portrait">
  <view class="head_img">
    <image src="{{item.avatarUrl}}" mode="cover" class="head_img_1">
    </image>
  </view>
  <!-- 判断显示个人信息 -->
  <view class="judgment_display">
    <view class="head_edit">
      <view class="head_name">
        <text>{{item.nickName}}</text>
      </view>
      <view class="editing_materials" bindtap="toEdit">
        编辑资料 >
      </view>
    </view>
  </view>
</view>
</block>

<!-- 浏览记录 -->

<view class="browsing_history">

.head_portrait {
  width: 92%;
  height: 200rpx;
  border-radius: 20rpx;
  display: flex;
  margin: 0 auto;
  background-image: linear-gradient(to right ,#00DE9A,#00FFE5);
  box-shadow: 12rpx 12rpx 39rpx #B2FFEE;
}  
.head_img {
  display: flex;
  align-items: center;
  justify-content: center;
}

.head_img_1 {
  width: 140rpx;
  height: 140rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
  margin-left: 40rpx;
  box-sizing: border-box;
}

.head_edit {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
 padding: 45rpx;
 color: #fff;
}